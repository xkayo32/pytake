FROM node:20-alpine

# Accept build arguments
ARG DOCKER=true

# Set as environment variable
ENV DOCKER=${DOCKER}

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy application code
COPY . .

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev"]
