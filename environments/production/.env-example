# PRODUCTION ENVIRONMENT
# Copy to .env.production and fill with actual values

# Database
POSTGRES_USER=pytake
POSTGRES_DB=pytake_prod
POSTGRES_PASSWORD=your-strong-prod-password-here-min-16-chars

# Redis
REDIS_PASSWORD=your-strong-redis-password-here-min-16-chars

# Application Secrets (from GitHub Secrets)
# These should be set via environment or GitHub Secrets
SECRET_KEY=your-secret-key-from-github-secrets
JWT_SECRET_KEY=your-jwt-key-from-github-secrets
ENCRYPTION_KEY=your-encryption-key-from-github-secrets

# Application Settings
ENVIRONMENT=production
DEBUG=false
PORT=8000

# API Documentation
API_TITLE=PyTake - WhatsApp Automation
API_VERSION=1.0.0

# CORS (restrict in production)
CORS_ORIGINS=["https://pytake.net","https://api.pytake.net"]

# Logging
LOG_LEVEL=INFO

# Features
ENABLE_DEMO_MODE=false
ENABLE_ANALYTICS=true

# External Services (if applicable)
WEBHOOK_TIMEOUT=30
MAX_RETRIES=3
