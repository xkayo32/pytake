# .env.production - Variáveis de Ambiente - Production
# ⚠️ NÃO COMMITAR ESTE ARQUIVO - Adicione ao .gitignore
# Copie de .env-example e preencha com valores reais

# ============================================================================
# DATABASE
# ============================================================================
POSTGRES_USER=pytake
POSTGRES_DB=pytake_prod
POSTGRES_PASSWORD=COLOQUE_SENHA_FORTE_AQUI

# ============================================================================
# REDIS
# ============================================================================
REDIS_PASSWORD=COLOQUE_SENHA_REDIS_AQUI

# ============================================================================
# APPLICATION SECRETS (DO GITHUB SECRETS)
# ============================================================================
SECRET_KEY=COLOQUE_SECRET_KEY_DO_GITHUB
JWT_SECRET_KEY=COLOQUE_JWT_SECRET_KEY_DO_GITHUB
ENCRYPTION_KEY=COLOQUE_ENCRYPTION_KEY_DO_GITHUB

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
ENVIRONMENT=production
DEBUG=false
PORT=8000

# ============================================================================
# API SETTINGS
# ============================================================================
API_TITLE=PyTake - WhatsApp Automation
API_VERSION=1.0.0

# ============================================================================
# CORS (PRODUCTION - RESTRINGIR)
# ============================================================================
CORS_ORIGINS=["https://pytake.net","https://api.pytake.net"]

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO

# ============================================================================
# FEATURES
# ============================================================================
ENABLE_DEMO_MODE=false
ENABLE_ANALYTICS=true

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================
WEBHOOK_TIMEOUT=30
MAX_RETRIES=3
