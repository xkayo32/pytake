# STAGING ENVIRONMENT
# Copy to .env.staging and fill with actual values

# Database
POSTGRES_USER=pytake
POSTGRES_DB=pytake_staging
POSTGRES_PASSWORD=your-staging-password-here-min-16-chars

# Redis
REDIS_PASSWORD=your-staging-redis-password-here-min-16-chars

# Application Secrets (from GitHub Secrets)
# These should be set via environment or GitHub Secrets
SECRET_KEY=your-secret-key-from-github-secrets
JWT_SECRET_KEY=your-jwt-key-from-github-secrets
ENCRYPTION_KEY=your-encryption-key-from-github-secrets

# Application Settings
ENVIRONMENT=staging
DEBUG=true
PORT=8000

# API Documentation
API_TITLE=PyTake - WhatsApp Automation (Staging)
API_VERSION=1.0.0

# CORS (can be broader in staging)
CORS_ORIGINS=["http://localhost:3001","http://localhost:8001","https://staging-api.pytake.net"]

# Logging
LOG_LEVEL=DEBUG

# Features
ENABLE_DEMO_MODE=true
ENABLE_ANALYTICS=false

# External Services (if applicable)
WEBHOOK_TIMEOUT=30
MAX_RETRIES=3
