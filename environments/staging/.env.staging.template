# .env.staging - Variáveis de Ambiente - Staging
# ⚠️ NÃO COMMITAR ESTE ARQUIVO - Adicione ao .gitignore
# Copie de .env-example e preencha com valores reais

# ============================================================================
# DATABASE
# ============================================================================
POSTGRES_USER=pytake
POSTGRES_DB=pytake_staging
POSTGRES_PASSWORD=COLOQUE_SENHA_STAGING_AQUI

# ============================================================================
# REDIS
# ============================================================================
REDIS_PASSWORD=COLOQUE_SENHA_REDIS_STAGING_AQUI

# ============================================================================
# APPLICATION SECRETS (DO GITHUB SECRETS)
# ============================================================================
SECRET_KEY=COLOQUE_SECRET_KEY_DO_GITHUB
JWT_SECRET_KEY=COLOQUE_JWT_SECRET_KEY_DO_GITHUB
ENCRYPTION_KEY=COLOQUE_ENCRYPTION_KEY_DO_GITHUB

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
ENVIRONMENT=staging
DEBUG=true
PORT=8000

# ============================================================================
# API SETTINGS
# ============================================================================
API_TITLE=PyTake - WhatsApp Automation (Staging)
API_VERSION=1.0.0

# ============================================================================
# CORS (STAGING - MAIS ABERTO)
# ============================================================================
CORS_ORIGINS=["http://localhost:3001","http://localhost:8001","https://staging-api.pytake.net"]

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=DEBUG

# ============================================================================
# FEATURES
# ============================================================================
ENABLE_DEMO_MODE=true
ENABLE_ANALYTICS=false

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================
WEBHOOK_TIMEOUT=30
MAX_RETRIES=3
