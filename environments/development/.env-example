# DEVELOPMENT ENVIRONMENT
# Copy to .env.development and fill with actual values

# Database
POSTGRES_USER=pytake
POSTGRES_DB=pytake_dev
POSTGRES_PASSWORD=dev-password-local

# Redis
REDIS_PASSWORD=dev-redis-password-local

# Application Secrets (from GitHub Secrets or local dev values)
SECRET_KEY=dev-secret-key-32chars-minimum-local-12345678
JWT_SECRET_KEY=dev-jwt-key-32chars-minimum-local-1234567890
ENCRYPTION_KEY=dev-encryption-key-32chars-minimum-local-1234567

# Application Settings
ENVIRONMENT=development
DEBUG=true
PORT=8000

# API Documentation
API_TITLE=PyTake - WhatsApp Automation (Development)
API_VERSION=1.0.0

# CORS (open in development)
CORS_ORIGINS=["http://localhost:3002","http://localhost:8002","http://localhost:3000","http://localhost:8000"]

# Logging
LOG_LEVEL=DEBUG

# Features
ENABLE_DEMO_MODE=true
ENABLE_ANALYTICS=false

# External Services (if applicable)
WEBHOOK_TIMEOUT=30
MAX_RETRIES=3

# Development Tools
SQLALCHEMY_ECHO=true
