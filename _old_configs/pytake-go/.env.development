# PyTake Backend - Development Environment Configuration

# Application
APP_ENV=development
APP_VERSION=1.0.0-dev
APP_PORT=8080
APP_HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pytake_dev
DB_USER=pytake
DB_PASSWORD=pytake123
DB_SSL_MODE=disable
DB_TIMEZONE=UTC
DB_MAX_CONNECTIONS=25
DB_IDLE_CONNECTIONS=5
DB_CONNECTION_LIFETIME=300

# Database URL (alternative)
DATABASE_URL=postgres://pytake:pytake123@localhost:5432/pytake_dev?sslmode=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=pytake123
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNECTIONS=3

# Redis URL (alternative)
REDIS_URL=redis://default:pytake123@localhost:6379/0

# JWT Configuration
JWT_SECRET=dev-secret-change-in-production-this-should-be-256-bits
JWT_ACCESS_TOKEN_EXPIRY=24h
JWT_REFRESH_TOKEN_EXPIRY=168h
JWT_ISSUER=pytake-dev
JWT_AUDIENCE=pytake-api

# WhatsApp Business API Configuration
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_WEBHOOK_SECRET=your-webhook-secret
WHATSAPP_API_VERSION=v18.0
WHATSAPP_BASE_URL=https://graph.facebook.com

# Evolution API Configuration (for unofficial WhatsApp features)
EVOLUTION_API_URL=http://localhost:8081
EVOLUTION_API_KEY=your-evolution-api-key
EVOLUTION_API_INSTANCE=pytake-instance

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@pytake.com
SMTP_FROM_NAME=PyTake

# AWS S3 Configuration (for file storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET=pytake-dev-files
S3_PUBLIC_URL=https://pytake-dev-files.s3.amazonaws.com

# Queue Configuration
QUEUE_REDIS_PREFIX=pytake:queue:dev
QUEUE_MAX_RETRIES=3
QUEUE_DEFAULT_TIMEOUT=5m
QUEUE_WORKER_POOLS={"default":5,"email":3,"webhook":10,"sync":2,"cleanup":1}

# ERP Configuration
ERP_ENCRYPTION_KEY=dev-erp-encryption-key-32-characters
ERP_HUBSOFT_TIMEOUT=30s
ERP_IXCSOFT_TIMEOUT=30s
ERP_MKSOLUTIONS_TIMEOUT=30s
ERP_SISGP_TIMEOUT=30s

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPS=10
RATE_LIMIT_BURST=20
RATE_LIMIT_CLEANUP_INTERVAL=60s

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_PATH=./logs/pytake-dev.log
LOG_MAX_SIZE=100MB
LOG_MAX_BACKUPS=5
LOG_MAX_AGE=30

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Security
SECURITY_HEADERS_ENABLED=true
CSRF_ENABLED=false
HTTPS_ONLY=false

# File Upload Configuration
MAX_UPLOAD_SIZE=10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,audio/mpeg,audio/wav,video/mp4

# WebSocket Configuration
WS_ENABLED=true
WS_MAX_CONNECTIONS=1000
WS_PING_INTERVAL=30s
WS_PONG_WAIT=60s

# Development Tools
DEBUG_ENABLED=true
PROFILER_ENABLED=true
HOT_RELOAD=true