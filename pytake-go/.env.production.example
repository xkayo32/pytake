# PyTake Backend - Production Environment Example
# Copy this file to .env.production and fill with your actual values

# Database Configuration
POSTGRES_PASSWORD=your-secure-postgres-password-here
DATABASE_URL=postgres://pytake:your-secure-postgres-password-here@postgres:5432/pytake?sslmode=disable

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_URL=redis://default:your-secure-redis-password-here@redis:6379/0

# JWT Security
JWT_SECRET=your-very-secure-jwt-secret-key-at-least-32-chars
JWT_ACCESS_TOKEN_EXPIRY=1h
JWT_REFRESH_TOKEN_EXPIRY=24h

# WhatsApp Business API Configuration
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_WEBHOOK_SECRET=your-webhook-secret-for-signature-validation

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Monitoring & Analytics
GRAFANA_PASSWORD=your-secure-grafana-password

# SSL/Domain Configuration
DOMAIN=your-domain.com
EMAIL=admin@your-domain.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPS=10
RATE_LIMIT_BURST=20

# Metrics & Monitoring
METRICS_ENABLED=true
PROMETHEUS_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
CORS_ORIGINS=https://your-domain.com,https://app.your-domain.com
CORS_CREDENTIALS=true

# Application
APP_ENV=production
APP_DEBUG=false