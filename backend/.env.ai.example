# AI Assistant Configuration
# ===========================
# Copy this file to .env and fill in your API keys

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic Configuration
# Get your API key from: https://console.anthropic.com/account/keys
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# AI Service Configuration
# Default provider: "openai", "anthropic", or "auto" (fallback)
AI_DEFAULT_PROVIDER=auto

# Rate limiting per provider (requests per minute)
AI_OPENAI_RATE_LIMIT=60
AI_ANTHROPIC_RATE_LIMIT=50

# Token limits
AI_MAX_TOKENS_PER_REQUEST=2000
AI_MAX_CONVERSATION_HISTORY=10

# Content filtering
AI_CONTENT_FILTER_ENABLED=true
AI_CONTENT_FILTER_STRICT=false

# Usage tracking and monitoring
AI_USAGE_TRACKING_ENABLED=true
AI_DAILY_REQUEST_LIMIT=1000

# Model configurations
OPENAI_DEFAULT_MODEL=gpt-4o-mini
ANTHROPIC_DEFAULT_MODEL=claude-3-haiku-20240307

# Temperature settings (0.0-1.0)
AI_DEFAULT_TEMPERATURE=0.7
AI_ANALYSIS_TEMPERATURE=0.3
AI_INTENT_TEMPERATURE=0.1

# Logging level for AI operations
AI_LOG_LEVEL=info

# Cache settings (optional - for future caching implementation)
AI_CACHE_ENABLED=false
AI_CACHE_TTL_SECONDS=3600