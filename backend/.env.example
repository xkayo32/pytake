# ==============================================
# PYTAKE - ENVIRONMENT VARIABLES
# ==============================================

# Application
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
APP_NAME=PyTake
APP_VERSION=1.0.0
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=True

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]
CORS_CREDENTIALS=True

# Database - PostgreSQL
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=pytake
POSTGRES_PASSWORD=pytake_dev_password
POSTGRES_DB=pytake_dev
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_SERVER}:${POSTGRES_PORT}/${POSTGRES_DB}

# Database - Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# Database - MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=pytake_logs

# JWT & Security
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Hashing
BCRYPT_ROUNDS=12

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# WhatsApp Business API (Meta)
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_API_VERSION=v18.0

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@pytake.com
SMTP_FROM_NAME=PyTake

# AWS S3 (Media Storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=pytake-media
AWS_REGION=us-east-1
AWS_S3_URL=https://${AWS_S3_BUCKET}.s3.${AWS_REGION}.amazonaws.com

# Sentry (Error Tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Subscription Plans Limits
FREE_PLAN_CHATBOTS=1
FREE_PLAN_WHATSAPP_NUMBERS=1
FREE_PLAN_CONTACTS=1000
FREE_PLAN_AGENTS=3
FREE_PLAN_DEPARTMENTS=1
FREE_PLAN_MONTHLY_MESSAGES=1000

STARTER_PLAN_CHATBOTS=3
STARTER_PLAN_WHATSAPP_NUMBERS=2
STARTER_PLAN_CONTACTS=5000
STARTER_PLAN_AGENTS=5
STARTER_PLAN_DEPARTMENTS=3
STARTER_PLAN_MONTHLY_MESSAGES=5000

# Webhook Settings
WEBHOOK_TIMEOUT_SECONDS=10
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY_SECONDS=60

# Queue Settings
QUEUE_MAX_SIZE=100
QUEUE_TIMEOUT_MINUTES=30

# Template Sync
TEMPLATE_SYNC_INTERVAL_HOURS=24

# Development/Testing
TESTING=False
TEST_DATABASE_URL=postgresql://pytake_test:test@localhost:5432/pytake_test
