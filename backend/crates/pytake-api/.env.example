# PyTake API Configuration
# Copy this file to .env and adjust the values for your environment

# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=8080
# SERVER_WORKERS=4  # Optional: Number of worker threads

# Database Configuration
DATABASE_URL=sqlite://pytake.db
# For PostgreSQL: postgresql://username:password@localhost/pytake
DATABASE_MAX_CONNECTIONS=10
DATABASE_MIN_CONNECTIONS=1
DATABASE_ACQUIRE_TIMEOUT=30
DATABASE_IDLE_TIMEOUT=600
DATABASE_MAX_LIFETIME=1800

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_EXPOSE_HEADERS=X-Total-Count,X-Request-Id
# CORS_MAX_AGE=3600  # Optional: Max age for preflight requests
CORS_SUPPORTS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=pretty  # Options: json, pretty, compact

# Environment
ENVIRONMENT=development  # Options: development, staging, production

# Optional Build Information (set by CI/CD)
# GIT_COMMIT=abc123...
# BUILD_DATE=2024-01-01T00:00:00Z